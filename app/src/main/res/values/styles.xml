<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>
        // enable window content transition
        <item name="android:windowContentTransitions">true</item>
    </style>

    <declare-styleable name="FavoriteIndicator">
        <attr name="favorite_fill_color" format="color" />
    </declare-styleable>

    <style name="LikeScene" parent="DefaultScene">
        <item name="favorite_fill_color">#FF003F</item>
    </style>

    <style name="DefaultScene">
        <item name="favorite_fill_color">#000000</item>
    </style>

</resources>
